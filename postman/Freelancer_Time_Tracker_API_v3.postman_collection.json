          }
        },
        {
          "name": "Delete Project",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/projects/1",
              "host": ["{{base_url}}"],
              "path": ["projects", "1"]
            },
            "description": "Delete a project"
          }
        }
      ]
    },
    {
      "name": "Time Logs",
      "item": [
        {          "name": "List Time Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/time-logs",
              "host": ["{{base_url}}"],
              "path": ["time-logs"],
              "query": [
                {
                  "key": "date",
                  "value": "2025-05-28",
                  "description": "Optional date filter"
                }
              ]
            },
            "description": "Get list of time logs with optional date filter"
          }
        },
        {          "name": "Start Time Log",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"project_id\": 1,\n    \"description\": \"Working on frontend components\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/time-logs/start",
              "host": ["{{base_url}}"],
              "path": ["time-logs", "start"]
            },
            "description": "Start a new time tracking session"
          }
        },        {
          "name": "Stop Time Log",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/time-logs/stop/1",
              "host": ["{{base_url}}"],
              "path": ["time-logs", "stop", "1"]
            },
            "description": "Stop a running time log by its ID"
          }
        },        {
          "name": "Get Running Time Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/time-logs/running",
              "host": ["{{base_url}}"],
              "path": ["time-logs", "running"]
            },
            "description": "Get all currently running time logs"
          }
        },
        {
          "name": "Create Manual Entry",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"project_id\": 1,\n    \"description\": \"Code review meeting\",\n    \"start_time\": \"2025-05-28 10:00:00\",\n    \"end_time\": \"2025-05-28 11:30:00\",\n    \"is_billable\": true,\n    \"tags\": [\"meeting\", \"review\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/time-logs",
              "host": ["{{base_url}}"],
              "path": ["time-logs"]
            },
            "description": "Create a manual time log entry"
          }
        },
        {
          "name": "Update Time Log",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"description\": \"Updated description\",\n    \"start_time\": \"2026-01-15 10:15:00\",\n    \"end_time\": \"2026-01-15 11:45:00\",\n    \"is_billable\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/time-logs/1",
              "host": ["{{base_url}}"],
              "path": ["time-logs", "1"]
            },
            "description": "Update a time log entry"
          }
        },
        {
          "name": "Delete Time Log",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/time-logs/1",
              "host": ["{{base_url}}"],
              "path": ["time-logs", "1"]
            },
            "description": "Delete a time log entry"
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Get Time Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reports?type=project&client_id=1&from=2025-05-01&to=2025-05-28",
              "host": ["{{base_url}}"],
              "path": ["reports"],
              "query": [
                {
                  "key": "type",
                  "value": "project",
                  "description": "Report type: project, client, daily, or weekly"
                },
                {
                  "key": "client_id",
                  "value": "1",
                  "description": "Optional client filter"
                },
                {
                  "key": "from",
                  "value": "2025-05-01",
                  "description": "Start date"
                },
                {
                  "key": "to",
                  "value": "2025-05-28",
                  "description": "End date"
                }
              ]
            },
            "description": "Get time report with filters"
          }
        },        {
          "name": "Get Summary Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reports/summary",
              "host": ["{{base_url}}"],
              "path": ["reports", "summary"]
            },
            "description": "Get summary of time tracking"
          }
        },        {
          "name": "Get Client Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reports/client/1?from=2025-05-01&to=2025-05-28",
              "host": ["{{base_url}}"],
              "path": ["reports", "client", "1"],
              "query": [
                {
                  "key": "from",
                  "value": "2025-05-01",
                  "description": "Start date"
                },
                {
                  "key": "to",
                  "value": "2025-05-28",
                  "description": "End date"
                }
              ]
            },
            "description": "Get detailed report for a specific client"
          }
        },        {
          "name": "Export PDF Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/reports/export/pdf?client_id=1&from=2025-05-01&to=2025-05-28",
              "host": ["{{base_url}}"],
              "path": ["reports", "export", "pdf"],
              "query": [
                {
                  "key": "client_id",
                  "value": "1",
                  "description": "Client ID"
                },
                {
                  "key": "from",
                  "value": "2025-05-01",
                  "description": "Start date"
                },
                {
                  "key": "to",
                  "value": "2025-05-28",
                  "description": "End date"
                }
              ]
            },
            "description": "Export time report as PDF"
          }
        }
      ]
    }
  ]
}
